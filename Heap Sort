#include<bits/stdc++.h>
using namespace std;


void heapify(int arr[], int n, int i){
    int maxidx = i;
    int l = 2 * i + 1;
    int r = 2 * i + 2;
    if(l < n && arr[l] > arr[maxidx]){
        maxidx = l;
    }                                                    

    if(r < n && arr[r] > arr[maxidx]){
        maxidx = r;
    }
    if(maxidx != i){
        swap(arr[i], arr[maxidx]);
        heapify(arr, n, maxidx);
    }
}

void heap_sort(int arr[], int n){
    for(int i = (n / 2) - 1; i >= 0; i--){
        heapify(arr, n, i);
    }
    for(int i = n - 1; i > 0; i--){
        swap(arr[0], arr[i]);
        heapify(arr, i, 0);
    }
}

int main(){
    int n = 5;
    int arr[n];
    srand(time(0));
    for(int i = 0; i < n; i++){
        arr[i] = rand() % 100;
    }
    heap_sort(arr, n);
    for(int i = 0; i < n; i++){
        cout << arr[i] << " ";
    }
}
